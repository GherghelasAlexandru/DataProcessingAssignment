{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "id": "Electricity schema",
  "description": "This schema describes the electricity table structure",
  "type": "object",
  "properties": {
    "electricity": {
      "type": "array",
      "minItems": 1,
      "maxItems": 5,
      "description": "Contains a list of countries and electricity consumption",
      "items": [
        {
          "type": "object",
          "properties": {
            "id": {
              "type": "integer",
              "minimum": 1,
              "description": "The id of the country"

            },
            "country": {
              "type": "string",
              "minimum": 1,
              "description": "The name of the country"

            },

            "percentage": {
              "type": "integer",
              "minimum": 1,
              "description": "Amount of electricity consumption in %"

            }
          },
          "required": ["id", "country", "percentage"]
        }
      ]
    }
  }
}
